<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadingActivity"
    android:background="@drawable/oldpicture">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="190dp"
        android:background="@layout/layout_bg"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/layout_margin_8"
        android:layout_marginTop="@dimen/layout_margin_8"
        android:layout_marginRight="@dimen/layout_margin_8"
        android:layout_marginBottom="@dimen/layout_margin_8"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorAbsolutelyBlack"
        android:textSize="@dimen/text_big_size"
        app:fontFamily="@font/fredericka_the_great"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/image_logo_size"
        android:layout_height="@dimen/image_logo_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.653"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/text_location_width"
        android:layout_height="@dimen/text_location_height"
        android:layout_marginLeft="@dimen/layout_margin_16"
        android:layout_marginTop="@dimen/layout_margin_8"
        android:layout_marginRight="@dimen/layout_margin_8"
        android:layout_marginBottom="@dimen/layout_margin_8"
        android:background="@layout/layout_bg"
        android:gravity="center"
        android:text="@string/AppInfo"
        android:textSize="@dimen/text_button_size"
        app:fontFamily="@font/sniglet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.823" />

</android.support.constraint.ConstraintLayout>
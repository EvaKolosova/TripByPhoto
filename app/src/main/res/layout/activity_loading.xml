<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oldpicture"
    tools:context=".LoadingActivity">

    <TextView
        android:id="@+id/tv_name_of_app"
        android:layout_width="@dimen/textview_width"
        android:layout_height="@dimen/textview_height"
        android:layout_marginLeft="@dimen/layout_margin_8"
        android:layout_marginTop="@dimen/layout_margin_8"
        android:layout_marginRight="@dimen/layout_margin_8"
        android:layout_marginBottom="@dimen/layout_margin_8"
        android:background="@layout/layout_bg"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorAbsolutelyWhite"
        android:textSize="@dimen/text_big_size"
        app:fontFamily="@font/fredericka_the_great"
        app:layout_constraintBottom_toTopOf="@+id/iv_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/image_logo_size"
        android:layout_height="@dimen/image_logo_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.609"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_description_of_app"
        android:layout_width="@dimen/text_location_width"
        android:layout_height="@dimen/text_description_height"
        android:layout_marginLeft="@dimen/layout_margin_16"
        android:layout_marginTop="@dimen/layout_margin_8"
        android:layout_marginRight="@dimen/layout_margin_8"
        android:layout_marginBottom="@dimen/layout_margin_8"
        android:background="@layout/layout_bg"
        android:gravity="center"
        android:text="@string/app_info"
        android:textSize="@dimen/text_button_size"
        app:fontFamily="@font/techd"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo"
        app:layout_constraintVertical_bias="0.95" />

</android.support.constraint.ConstraintLayout>